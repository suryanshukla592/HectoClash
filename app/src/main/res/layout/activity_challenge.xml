<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friendly Game"
        android:textSize="24sp"
        android:fontFamily="@font/russo_one"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/buttonCreateGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:layout_marginBottom="16dp"
        android:paddingVertical="12dp"
        android:fontFamily="@font/russo_one"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/editTextJoinCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Game Code"
            android:padding="12dp"
            android:fontFamily="@font/noah_bold"
            android:textSize="18sp"
            android:background="@drawable/rounded_corners" />

        <Button
            android:id="@+id/buttonJoinGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:layout_marginStart="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/russo_one"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewGameCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:fontFamily="@font/noah_bold"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonShareCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Code"
        android:layout_marginTop="16dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:fontFamily="@font/russo_one"
        android:textSize="18sp" />

</LinearLayout>