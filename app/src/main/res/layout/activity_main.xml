<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_bg2"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15sp"
        android:layout_marginHorizontal="4sp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultdp"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:shapeAppearanceOverlay="@style/CustomCircularShape"/>
        <ImageView
            android:id="@+id/soundToggle"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/on"
            app:tint="@color/my_primary"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="14sp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toStartOf="@id/options"/>
        <ImageView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/options"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gamename"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/buttons">
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HectoClash"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/russo_one" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:paddingHorizontal="80dp"
            android:layout_marginTop="15sp"
            android:src="@drawable/logoname"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/logoname"
            app:layout_constraintTop_toBottomOf="@id/header">
        </ImageView>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@id/logoname"
            android:src="@drawable/logo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/gamename"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:id="@+id/buttonStartGame"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_margin="10sp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="#F6C318"
                android:foreground="@drawable/ripple_effect_cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="37sp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/findmatch"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/russo_one"
                    android:textColor="@color/black"
                    android:text="Find a Match"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingHorizontal="6sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="18sp"
                    android:autoSizeStepGranularity="1sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/buttonChallenge"
            app:cardCornerRadius="20dp"
            android:layout_margin="10sp"
            app:cardElevation="8dp"
            android:backgroundTint="#F6C318"
            android:foreground="@drawable/ripple_effect_cardview"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/custom"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="4dp"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/russo_one"
                android:textColor="@color/black"
                android:text="Custom Match"
                android:paddingHorizontal="6sp"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/buttonPractice"
            app:cardCornerRadius="20dp"
            android:layout_margin="10sp"
            app:cardElevation="8dp"
            android:backgroundTint="#F6C318"
            android:foreground="@drawable/ripple_effect_cardview"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/practice"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="4dp"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/russo_one"
                android:paddingHorizontal="6sp"
                android:textColor="@color/black"
                android:text="Practice"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/buttonLeaderboard"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_margin="10sp"
            android:backgroundTint="#F6C318"
            android:foreground="@drawable/ripple_effect_cardview"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/leaderboard"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="4dp"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/russo_one"
                android:textColor="@color/black"
                android:text="Leaderboard"
                android:textSize="18sp"
                android:paddingHorizontal="6sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/buttonSpectate"
            android:layout_margin="10sp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#F6C318"
            android:foreground="@drawable/ripple_effect_cardview"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/hectocam"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="4dp"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/russo_one"
                android:textColor="@color/black"
                android:text="Hecto-Cams"
                android:textSize="18sp"
                android:maxLines="1"
                android:paddingHorizontal="6sp"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:id="@+id/buttonHowToPlay"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#F6C318"
            android:foreground="@drawable/ripple_effect_cardview"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/howtoplay"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="4dp"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/russo_one"
                android:textColor="@color/black"
                android:text="How to Play"
                android:textSize="18sp"
                android:maxLines="1"
                android:paddingHorizontal="6sp"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>