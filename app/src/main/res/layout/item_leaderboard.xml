<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cardView"
    app:cardBackgroundColor="#1F1F1F"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|start"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp">

        <!-- 👤 Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultdp"
            app:shapeAppearanceOverlay="@style/CustomCircularShape" />

        <!-- 🔤 Player Name -->
        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="1dp"
            android:layout_toEndOf="@id/image"
            android:textSize="18sp"
            android:fontFamily="@font/russo_one"
            android:textColor="#EDDCDC"
            android:text="Member Name" />

        <!-- ⭐ 🎯 ⏱ Rating | Accuracy | Time -->
        <LinearLayout
            android:id="@+id/statsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerName"
            android:layout_toEndOf="@id/image"
            android:layout_marginStart="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- ⭐ Rating -->
            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 9999"
                android:layout_marginTop="2sp"
                android:fontFamily="@font/noah_bold"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />

            <!-- 🎯 Accuracy -->
            <TextView
                android:id="@+id/accuracyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎯 85%"
                android:layout_marginTop="2sp"
                android:fontFamily="@font/noah_bold"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />

            <!-- ⏱ Avg Time -->
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ 7.2s"
                android:layout_marginTop="2sp"
                android:fontFamily="@font/noah_bold"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 🏅 Rank or Medal -->
        <FrameLayout
            android:id="@+id/medalContainer"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <!-- Medal image -->
            <ImageView
                android:id="@+id/medalImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/silver_medal" />

            <!-- Text fallback for Rank -->
            <TextView
                android:id="@+id/rankText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="visible" />
        </FrameLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
