<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_corners_dialogue"
    android:elevation="12dp">

    <ImageView
        android:id="@+id/buttonClosePopup"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPopupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possible Solutions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        android:fontFamily="@font/russo_one"
        app:layout_constraintTop_toBottomOf="@id/buttonClosePopup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewSolution1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✅ Solution 1"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/russo_one"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textViewPopupTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSolution2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✅ Solution 2"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/russo_one"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textViewSolution1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSolution3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✅ Solution 3"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/russo_one"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textViewSolution2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
