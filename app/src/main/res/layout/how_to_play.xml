<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_bg2"
    android:layout_height="match_parent"
    tools:context=".HowToPlay">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/header"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textColor="@color/my_primary"
            android:textSize="30sp"
            android:fontFamily="@font/russo_one"
            android:text="How to Play"
            android:textAlignment="center"
            android:shadowColor="#80FFD700"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginHorizontal="10sp"
        android:background="#AB000000"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hectoc: A Mental Challenge"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"  android:paddingBottom="16dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hectoc is a Mental Calculation game, developed by Yusnier Viera in the 2010s."
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"  android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Each question presents a sequence of 6 digits, each ranging from 1 to 9."
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Example: 249384"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:background="#222222"  android:padding="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The aim is to use these numbers in order to find the number 100."
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Here are two solutions to this example:"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 × (49 + 3 – 8/4) = 100\n(2 - 4 + 9 + 3)^(8/4) = 100"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"
                    android:textStyle="italic"
                    android:background="#222222"  android:padding="8dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allowed Operations:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Combining adjacent numbers (e.g., 4 and 9 to make 49).\n• Addition, subtraction, multiplication, and division.\n• Negative symbols.\n• Powers (e.g., ‘^’).\n• Brackets for order of operations."
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restrictions:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Numbers cannot be rearranged.\n• No other symbols (e.g., square roots) are allowed.\n• All numbers must be used."
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hectoc in Competitions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hectoc has been featured in advanced international mental calculation competitions, such as the JMCWC and Memoriad."
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategies for Success"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="16dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remember, most hectocs have multiple solutions. Work backwards from 100!"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Useful 100 Combinations:"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 10 × 10\n• 99 + 1\n• 25 × 4"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"
                    android:textStyle="italic"
                    android:background="#222222"  android:padding="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategy A: Starting Near 100"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If a number is close to 100, adjust the rest.\nExample: 1 + 96 + (2 × 6)/4 = 100"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategy B: 100 = 10²"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Build 2 and 10.\nExample: (1 + (9 – 6)²)^(6 – 4) = 100"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategy C: 100 = 10 × 10"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Example: (1 + 9) × (6 + 2 + 6 – 4) = 100"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategy D: 100 = 20 × 5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Example: (–1^9 + 6) × 2 × (6 + 4) = 100"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Final Thoughts"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="16dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use these strategies and think backwards from 100 for quicker solutions!"
                    android:textSize="18sp"
                    android:textColor="#DDDDDD"
                    android:paddingBottom="16dp"/>

            </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>