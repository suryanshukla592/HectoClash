<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enabled state -->
    <item android:state_enabled="true" android:drawable="@drawable/ic_crown_gold" />
    <!-- Disabled state -->
    <item android:state_enabled="false" android:drawable="@drawable/ic_crown_gold_faded" />
    <!-- Default state (if not enabled or disabled) - optional, but good practice -->
    <item android:drawable="@drawable/ic_crown_gold" />
</selector>